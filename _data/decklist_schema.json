{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Magic The Gathering Decklist File",
  "description": "A schema for validating MTG Commander decklists with specific properties for commanders, discord, updated date, section, colors, decklists, description, id, recommended, and title.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "commander": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "link": { "type": "string", "format": "uri" }
          },
          "required": ["name", "link"],
          "additionalProperties": false
        }
      },
      "discord": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "link": { "type": "string", "format": "uri" }
        },
        "required": ["title", "link"],
        "additionalProperties": false
      },
      "updated": {
        "type": "string",
        "format": "date-time"
      },
      "section": {
        "type": "string",
	"enum": ["BREW", "COMPETITIVE", "DEPRECATED"]
      },
      "colors": {
        "type": "array",
        "minItems": 0,
        "items": { "type": "string" }
      },
      "decklists": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "link": { "type": "string", "format": "uri" },
            "title": { "type": "string" },
            "primer": { "type": "boolean" }
          },
          "required": ["link", "title", "primer"],
          "additionalProperties": false
        }
      },
      "description": {
        "type": "string"
      },
      "id": {
        "type": "string"
      },
      "title": {
        "type": "string"
      }
    },
    "required": [
      "commander",
      "discord",
      "updated",
      "section",
      "colors",
      "decklists",
      "description",
      "id",
      "title"
    ],
    "additionalProperties": true
  }
}

